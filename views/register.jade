//- 用户注册页面 - register.jade
doctype html
html(lang="zh-CN")
  head
    title 用户注册
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    style.
      body { font-family: '微软雅黑', sans-serif; max-width: 500px; margin: 0 auto; padding: 20px; }
      .form-group { margin-bottom: 15px; }
      label { display: block; margin-bottom: 5px; }
      input[type="text"], input[type="email"] {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
      }
      button { padding: 8px 15px; cursor: pointer; }
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")

  body
    h1 登录/注册
    form(onsubmit="handleSubmit(event)")
      .form-group
        label(for="username") 用户名:
        input(type="text", id="username", name="username", required)
      
      .form-group
        label(for="email") 邮箱:
        input(type="email", id="email", name="email", required)
        button(type="button", onclick="sendCode()") 发送验证码
      
      .form-group
        label(for="verifyCode") 验证码:
        input(type="text", id="verifyCode", name="verifyCode", required)
      
      button(type="submit") 确定
    
    script.
      async function sendCode() {
        const email = document.querySelector('input[name="email"]').value;
        if(!email) {
          alert('请输入邮箱');
          return;
        }
        try {
          const res = await fetch('/register/send-code', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({email})
          });
          const data = await res.json();
          alert(data.message);
        } catch (err) {
          alert('发送验证码失败，请重试');
        }
      }
      
      async function handleSubmit(event) {
        event.preventDefault();
        const formData = {
          username: document.querySelector('input[name="username"]').value,
          email: document.querySelector('input[name="email"]').value,
          verifyCode: document.querySelector('input[name="verifyCode"]').value
        };
        
        try {
          const res = await fetch('/register', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(formData)
          });
          const data = await res.json();
          
          if (data.success) {
            // 保存token到cookie
            document.cookie = `token=${data.token}; path=/; max-age=2592000`; // 30天过期
            window.location.href = '/'; // 跳转到首页
          } else {
            alert(data.message);
          }
        } catch (err) {
          alert('操作失败，请重试');
        }
      }